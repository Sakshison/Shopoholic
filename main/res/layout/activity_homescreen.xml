<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.homescreen"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@color/yellow"/>

            <android.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/search_view"
                android:layout_centerHorizontal="true"
                android:queryHint="Search here"
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"
                />
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="50dp"/>
           <androidx.viewpager2.widget.ViewPager2
               android:id="@+id/viewPager"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               tools:ignore="MissingConstraints"
               android:layout_marginTop="70dp">
           </androidx.viewpager2.widget.ViewPager2>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="250dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/men_cl"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/men_cl"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="80dp"
                    android:text="Men"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/women_cl"
                    app:civ_border_width="3dp"
                    android:layout_marginLeft="90dp"
                    app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/women_cl"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="80dp"
                    android:text="women"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/sneaker"
                app:civ_border_width="3dp"
                android:layout_marginLeft="180dp"
                app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/sneakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="80dp"
                    android:text="Sneakers"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/women_footwear"
                app:civ_border_width="3dp"
                android:layout_marginLeft="270dp"
                app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/women_footwear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="80dp"
                    android:text="Footwear"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                android:padding="10dp"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/women_bags"
                app:civ_border_width="3dp"
                    android:layout_marginTop="100dp"
                app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/women_bags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="180dp"
                    android:text="Women Bags"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/makeup"
                    android:layout_marginTop="100dp"
                    app:civ_border_width="3dp"
                    android:layout_marginLeft="90dp"
                    app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/women_makeup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="180dp"
                    android:text="Makeup"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/watches"
                    android:layout_marginTop="100dp"
                    app:civ_border_width="3dp"
                    android:layout_marginLeft="180dp"
                    app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/watches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="180dp"
                    android:text="Watches"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="10dp"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/electronics"
                    android:layout_marginTop="100dp"
                    app:civ_border_width="3dp"
                    android:layout_marginLeft="270dp"
                    app:civ_border_color="@color/black"/>
                <Button
                    android:id="@+id/electronics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="180dp"
                    android:text="Electronics"
                    android:textColor="@color/yellow"
                    android:textSize="10sp"
                    />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>